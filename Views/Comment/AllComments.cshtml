@model List<Portfolio.Models.Comment>

<!DOCTYPE html>

<h3>All comments</h3>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @if (Model != null)
                @foreach (var comment in Model)
                {
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm" style="border-radius:.8rem; min-height:300px; overflow:hidden;">
                            <p style="">@comment.feedback</p>
                            <div class="carousel-caption text-center" style="left:0; right:0; bottom:0px; padding:0px;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center row">
                                        <div class="btn-group col">
                                            <button type="button" href="~/Comment/@comment.comment_id" class="btn btn-sm btn-outline-secondary">(..)</button>
                                        </div>
                                        <p class="text-muted col" style="margin-bottom:0px; padding-left:0px;">@comment.user_name</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>
